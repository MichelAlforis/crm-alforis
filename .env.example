# =============================================================================
# CRM ALFORIS - ENVIRONMENT VARIABLES (Example)
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to git!

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+psycopg2://crm_user:yourpassword@localhost:5432/crm_db
POSTGRES_PASSWORD=yourpassword

# =============================================================================
# REDIS (Cache & Queue)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# JWT AUTH
# =============================================================================
SECRET_KEY=your-super-secret-jwt-key-change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# EMAIL (IONOS / RESEND)
# =============================================================================
# IONOS IMAP
IONOS_IMAP_HOST=imap.ionos.fr
IONOS_IMAP_PORT=993
IONOS_EMAIL=your-email@domain.com
IONOS_PASSWORD=your-password

# RESEND (Email sending)
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Your Company

# =============================================================================
# AI / LLM
# =============================================================================
# Mistral AI
MISTRAL_API_KEY=xxxxxxxxxxxxx

# OpenAI (fallback)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# WEB ENRICHMENT (Acte V)
# =============================================================================
# SerpAPI (Google Search)
SERPAPI_API_KEY=xxxxxxxxxxxxx

# =============================================================================
# AUTOFILL PIPELINE (Feature Flags)
# =============================================================================
# Enable web enrichment in autofill pipeline
AUTOFILL_USE_WEB_ENRICHMENT=true

# Auto-apply threshold (0.0-1.0)
AUTOFILL_THRESHOLD=0.92

# Web enrichment minimum confidence (0.0-1.0)
AUTOFILL_WEB_MIN_CONFIDENCE=0.70

# LLM max tokens for parsing
AUTOFILL_MAX_TOKENS=2000

# LLM temperature (0.0-1.0, lower = more deterministic)
AUTOFILL_TEMPERATURE=0.1

# Cache TTL (seconds) - 7 days
AUTOFILL_CACHE_TTL=604800

# Rate limit (requests per minute)
AUTOFILL_RATE_LIMIT=10

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# =============================================================================
# OBSERVABILITY
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry (optional)
SENTRY_DSN=

# Budget guardrails (daily limits)
MAX_DAILY_LLM_REQUESTS=1000
MAX_DAILY_WEB_ENRICHMENTS=100

# Alert webhook (Slack/Discord)
ALERT_WEBHOOK_URL=
