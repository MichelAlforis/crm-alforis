# ===========================================
# CONFIGURATION ENVIRONNEMENT - CRM TPM FINANCE
# ===========================================
# Copier ce fichier en .env et remplir les valeurs

# --- BASE DE DONNÉES POSTGRESQL ---
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=crm_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# URL complète de connexion (utilisée par le backend)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# --- BACKEND API (FastAPI) ---
# Mode debug (True pour dev, False pour prod)
DEBUG=True

# Clé secrète pour JWT (GÉNÉRER UNE CLÉ FORTE EN PRODUCTION!)
# Générer avec: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_KEY_WITH_OPENSSL

# Origines CORS autorisées (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3010,http://localhost:3000,http://localhost:5173

# Port d'exposition de l'API
API_PORT=8000

# --- FRONTEND (Next.js) ---
# URL de l'API backend (accessible depuis le navigateur)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Port d'exposition du frontend
FRONTEND_PORT=3010

# --- DOCKER ---
# Port externe pour PostgreSQL (éviter conflit avec PostgreSQL local)
POSTGRES_EXTERNAL_PORT=5433

# --- SÉCURITÉ JWT ---
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# --- UPLOADS & LIMITES ---
MAX_UPLOAD_SIZE_MB=10

# --- ENVIRONNEMENT ---
# Options: development, staging, production
ENVIRONMENT=development
