# ===========================================
# CONFIGURATION ENVIRONNEMENT - CRM TPM FINANCE
# ===========================================
# Copier ce fichier en .env et remplir les valeurs

# --- BASE DE DONNÉES POSTGRESQL ---
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=crm_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# URL complète de connexion (utilisée par le backend)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://crm_user:CHANGE_ME_IN_PRODUCTION@postgres:5432/crm_db

# --- BACKEND API (FastAPI) ---
# Mode debug (True pour dev, False pour prod)
DEBUG=True

# Clé secrète pour JWT (GÉNÉRER UNE CLÉ FORTE EN PRODUCTION!)
# Générer avec: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_KEY_WITH_OPENSSL

# Origines CORS autorisées (format JSON array)
# DEV: ["http://localhost:3010","http://localhost:3000"]
# PROD: ["https://crm.votre-domaine.com"]
ALLOWED_ORIGINS=["http://localhost:3010","http://localhost:3000","http://localhost:5173"]

# Port d'exposition de l'API
API_PORT=8000

# --- FRONTEND (Next.js) ---
# URL de l'API backend (accessible depuis le navigateur)
# DEV: http://localhost:8000/api/v1
# PROD: https://api.votre-domaine.com/api/v1
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Port d'exposition du frontend
FRONTEND_PORT=3010

# --- DOCKER ---
# Port externe pour PostgreSQL (éviter conflit avec PostgreSQL local)
POSTGRES_EXTERNAL_PORT=5433

# --- SÉCURITÉ JWT ---
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# --- UPLOADS & LIMITES ---
MAX_UPLOAD_SIZE_MB=10

# --- ENVIRONNEMENT ---
# Options: development, staging, production
ENVIRONMENT=development
