# ==============================================
# Alforis CRM - Environment Variables Example
# ==============================================

# Application
APP_TITLE="Alforis CRM API"
APP_VERSION="2.0.0"
DEBUG=false
SECRET_KEY="your-very-secret-key-change-in-production"
ENVIRONMENT="development"  # development, staging, production

# Database
DATABASE_URL="postgresql+psycopg2://crm_user:crm_password@postgres:5432/crm_db"
DATABASE_ECHO=false

# JWT Authentication
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# CORS
ALLOWED_ORIGINS='["http://localhost:3010","http://localhost:3000","https://crm.alforis-finance.com"]'

# Redis Cache
REDIS_ENABLED=true
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Email Automation
SENDGRID_API_KEY=""
SENDGRID_EVENT_WEBHOOK_KEY=""
MAILGUN_API_KEY=""
MAILGUN_DOMAIN=""
DEFAULT_EMAIL_FROM_NAME="Alforis CRM"
DEFAULT_EMAIL_FROM_ADDRESS="noreply@alforis-finance.com"
DEFAULT_EMAIL_REPLY_TO="support@alforis-finance.com"
DEFAULT_EMAIL_UNSUBSCRIBE_BASE_URL="https://crm.alforis-finance.com/email/unsubscribe"
EMAIL_RATE_LIMIT_PER_MINUTE=120
EMAIL_BATCH_SIZE=500
EMAIL_TRACK_OPENS=true
EMAIL_TRACK_CLICKS=true

# Monitoring & Logging
SENTRY_DSN=""  # Laisser vide pour d√©sactiver
SENTRY_ENVIRONMENT="development"
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR="./uploads"
BACKUP_DIR="./backups"

# ==============================================
# AI AGENT CONFIGURATION
# ==============================================

# Enable/Disable AI Features
AI_ENABLED=true
AI_DEFAULT_PROVIDER="claude"  # claude, openai, ollama

# Anthropic Claude API (Recommended)
ANTHROPIC_API_KEY=""  # Your Claude API key from https://console.anthropic.com/
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
ANTHROPIC_MAX_TOKENS=4096

# OpenAI API (Alternative)
OPENAI_API_KEY=""  # Your OpenAI API key from https://platform.openai.com/
OPENAI_MODEL="gpt-4o"
OPENAI_MAX_TOKENS=4096

# Ollama (Local LLM - Free but requires setup)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.1:latest"

# AI Agent Behavior
AI_AUTO_APPLY_ENABLED=false  # Auto-apply high confidence suggestions
AI_AUTO_APPLY_THRESHOLD=0.95  # Confidence threshold for auto-apply (0.0-1.0)
AI_DUPLICATE_THRESHOLD=0.85  # Similarity threshold for duplicate detection
AI_QUALITY_THRESHOLD=0.70  # Minimum quality score
AI_MAX_SUGGESTIONS_PER_RUN=100  # Max suggestions per execution

# AI Cache & Performance
AI_CACHE_TTL_HOURS=24  # Cache duration in hours
AI_RATE_LIMIT_RPM=10  # Requests per minute to AI API
AI_BATCH_SIZE=10  # Number of items per batch

# AI Budget Limits (Cost Control)
AI_DAILY_BUDGET_USD=10.0  # Maximum daily spend
AI_MONTHLY_BUDGET_USD=300.0  # Maximum monthly spend

