{
  "name": "crm-frontend",
  "version": "2.0.0",
  "description": "CRM Frontend - TPM Finance",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo -p 3010",
    "dev:local": "next dev --turbo -p 3010",
    "dev:remote": "NODE_ENV=development next dev --turbo -p 3010",
    "dev:webpack": "next dev -p 3010",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start -p 3010",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "kill-port": "lsof -ti:3010 | xargs kill -9 2>/dev/null || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
