# ===========================================
# STAGING ENVIRONMENT VARIABLES
# ===========================================
# Copy to .env.staging and fill in the values

# --- Database (use same Postgres server as prod) ---
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=CHANGE_ME_DIFFERENT_FROM_PROD
POSTGRES_DB=crm_staging
POSTGRES_EXTERNAL_PORT=5433

# --- Redis (use same Redis server as prod, different DB) ---
REDIS_PORT=6379

# --- API Configuration ---
API_PORT=8001
FRONTEND_PORT=3011

# --- Security (DIFFERENT from production!) ---
STAGING_SECRET_KEY=CHANGE_ME_GENERATE_NEW_KEY
STAGING_ENCRYPTION_KEY=CHANGE_ME_GENERATE_NEW_KEY
STAGING_ALLOWED_ORIGINS=["https://staging.crm.alforis.fr"]

# --- JWT ---
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# --- URLs ---
NEXT_PUBLIC_API_URL=https://staging.crm.alforis.fr/api/v1
DOMAIN=staging.crm.alforis.fr

# --- Upload ---
MAX_UPLOAD_SIZE_MB=10

# --- Sentry (optional - use different project for staging) ---
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging

# --- Email (optional - use test email service for staging) ---
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=

